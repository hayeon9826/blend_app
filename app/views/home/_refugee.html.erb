  <div class="content">
      <div class="content-title has-icon">
          <h3>My comments</h3>
      </div>
  </div>
<% if current_user.comments.present?%>
  <% current_user&.comments.order(id: :desc).last(3).each do |p| %>
    <div class="content caption round-medium shadow-huge" style='padding: 10px'>
        <div class="review-5 container top-20">
            <h4 class="font-600">5.00</h4>
            <h2>average rating</h2>
            <div class="review-stars">
                <i class="fa fa-star color-yellow1-dark"></i>
                <i class="fa fa-star color-yellow1-dark"></i>
                <i class="fa fa-star color-yellow1-dark"></i>
                <i class="fa fa-star color-yellow1-dark"></i>
                <i class="fa fa-star color-yellow1-dark"></i>
            </div>
            <p>
            <%= p.content %>
        </div>
    </div>
  <% end %>
<% else %>
  <div class="content caption round-medium shadow-huge" style='padding: 10px'>
    No Comments
  </div>
<% end %>

<div class="divider divider-margins"></div>


